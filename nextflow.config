    BAM_prep_script    = '/home/ttm3567/rootdir_scratch/20250806_Corigami/maxATAC_Corigami_NextflowPipeline/BAM_Prep/chr_edit_bam.sh'
    maxATAC_prepare_script   = '/home/ttm3567/rootdir_scratch/20250806_Corigami/maxATAC_Corigami_NextflowPipeline/maxATAC/maxATAC_prepare_mm10.sh'
    maxATAC_predict_script        = '/home/ttm3567/rootdir_scratch/20250806_Corigami/maxATAC_Corigami_NextflowPipeline/maxATAC/maxATAC_predict_mm10.sh'
    maxATAC_sampled_pred_benchmark_script     = '/home/ttm3567/rootdir_scratch/20250806_Corigami/maxATAC_Corigami_NextflowPipeline/maxATAC/maxATAC_mouse_BasicBenchmarking.sh'
    C_Origami_predict_script       = '/home/ttm3567/rootdir_scratch/20250806_Corigami/maxATAC_Corigami_NextflowPipeline/C_origami/Corigami_predict_mm10.sh'
    moduleLoad         = 'samtools pigz bedtools'
    maxatac_data_dir = '/home/ttm3567/opt/maxatac/data/hg38'
    maxATAC_mamba_environment = '/projects/b1063/TylerT/maxATAC'
    Corigami_mamba_environment = '/projects/b1063/TylerT/C_oriGAMZzz' 
    corigami_chrom_sizes = "/home/ttm3567/opt/maxatac/data/mm10/mm10.chrom.sizes"
    corigami_seq_dir     = "/projects/b1063/Reference/mm10_perChromosome/dna_sequence"
    corigami_model_ckpt  = "/home/ttm3567/b1063/Reference/corigami_data/model_weights/corigami_base.ckpt"
    corigami_win         = 2097152
    corigami_step        = 2097152
    corigami_atac_suffix = "_IS_slop20_RP20M_minmax01.bw"
    corigami_ctcf_suffix = "_CTCF.bw"
    mm10_blacklist_bed = '/home/ttm3567/opt/maxatac/data/hg38/hg38_maxatac_blacklist.bed'
